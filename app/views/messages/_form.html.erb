<%= form_with(model: message, local: true,
              url: (@message.new_record? ? message_thread_messages_path : message_thread_message_path)) do |form| %>
  <% if message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
      <% message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author, id: :message_author %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content, id: :message_content %>
  </div>

  <!-- <div class="field">
    <%= form.label :message_thread_id %>
    <%= form.text_field :message_thread_id, id: :message_message_thread_id %>
  </div> -->
  <%= form.hidden_field :message_thread_id, value: params[:message_thread_id] %>

  <div class="field">
    <%= form.label :read %>
    <%= form.check_box :read, id: :message_read %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
