<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Content</th>
      <th>Message Thread ID</th>
      <th>Message Thread Of</th>
      <th>Read</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.author %></td>
        <td><%= message.content %></td>
        <td><%= message.message_thread.id %></td>
        <td><%= message.message_thread.user.name %></td>
        <td><%= message.read %></td>
        <td><%= link_to 'Show', message_thread_message_path(id: message.id) %></td>
        <td><%= link_to 'Edit', edit_message_thread_message_path(id: message.id) %></td>
        <td><%= link_to 'Destroy', message_thread_message_path(id: message.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<%= link_to 'New Message on this Thread', new_message_thread_message_path(message_thread_id: params[:message_thread_id]) %>
<br/>
<%= link_to 'Back to all Threads', message_threads_path %>
